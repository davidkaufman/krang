<tmpl_include header.tmpl>

<script type="text/javascript">
Krang.onload( function() {
  Krang.Help.set( 'template_find' );
} );

<tmpl_if do_advanced_search>
  simple_search = function()
  {
    Krang.form_submit('template_search_form', { rm: 'search' }, { to_top: false });
  }

  clear_advanced_search = function()
  {
    Krang.form_submit('clear_advanced_search_form', {}, { to_top: false });
  }
<tmpl_else>
  advanced_search = function()
  {
    Krang.form_submit('template_search_form', { rm: 'advanced_search' }, { to_top: false });
  }
</tmpl_if>

<tmpl_if row_count>
  edit_template = function( id )
  {
    Krang.form_submit('find_template', { rm: 'checkout_and_edit', template_id: id });
  }

  view_template = function( id )
  {
    Krang.form_submit('find_template', { rm: 'view', template_id: id });
  }

  delete_selected = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to delete!' );
    else if ( confirm( 'Are you SURE you want to delete the checked Templates?' ) )
      Krang.form_submit('krang_pager_form', { rm: 'delete_selected' }, { to_top: false });
  }

  do_deploy = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to deploy!' );
    else if ( confirm( 'Are you SURE you want to deploy the checked Templates?' ) )
      Krang.form_submit('krang_pager_form', { rm: 'deploy_selected' }, { to_top: false });
  }
</tmpl_if>
</script>

<h2>
Find Template
</h2>

<form name="template_search_form" method="post" action="template.pl">

<input name="rm" value="<tmpl_if do_advanced_search>advanced_</tmpl_if>search" type="hidden">
<input name="krang_pager_curr_page_num" value="" type="hidden">
<input name="krang_pager_show_big_view" value="<tmpl_var escape=html krang_pager_show_big_view>" type="hidden">
<input name="krang_pager_sort_field" value="<tmpl_var escape=html krang_pager_sort_field>" type="hidden">
<input name="krang_pager_sort_order_desc" value="<tmpl_var escape=html krang_pager_sort_order_desc>" type="hidden">
<tmpl_if do_advanced_search>
  <input name="search_filter" value="" type="hidden">
</tmpl_if>

<div class="finder">

<div class="east">
<a href="javascript:<tmpl_if do_advanced_search>simple<tmpl_else>advanced</tmpl_if>_search()"><tmpl_if do_advanced_search>Simple<tmpl_else>Advanced</tmpl_if> Search</a>
</div>

<h3>
<tmpl_if do_advanced_search>
  Advanced
<tmpl_else>
  Simple
</tmpl_if>
Search
</h3>

<tmpl_if do_advanced_search>

  <table class="demi" summary="">

  <colgroup>
  <col class="c-mini">
  <col>
  </colgroup>

  <tr>
  <th>URL</th>
  <td><input name="search_url" value="<tmpl_var escape=html search_url>"></td>
  </tr>

  <tr>
  <th>Site/Category</th>
  <td><tmpl_var category_chooser></td>
  </tr>

  <tr>
  <th>Element</th>
  <td><tmpl_var element_chooser></td>
  </tr>

  <tr>
  <th>Template ID</th>
  <td><input name="search_template_id" value="<tmpl_var escape=html search_template_id>"></td>
  </tr>

  <tr class="last">
  <td colspan="2" style="text-align:right">
  <input value="Clear" onclick="clear_advanced_search()" type="button" class="button">
  <input value="Search" type="submit" class="button">
  </td>
  </tr>

  </table>

<tmpl_else>

  <p>
  <input name="search_filter" value="<tmpl_var escape=html search_filter>" size="40" class="autocomplete">
  <input value="Search" type="submit" class="button">
  </p>

</tmpl_if>

</div>

</form>

<div class="pager">

<!--Krang::HTMLPager:-->
<tmpl_var pager_html>
<!--:Krang::HTMLPager-->

</div>

<tmpl_if row_count>
  <div class="panel"><form name="ignoreme">
  <input value="Deploy" onclick="do_deploy()" type="button">
  <input value="Delete" onclick="delete_selected()" type="button">
  </form></div>
</tmpl_if>

<tmpl_if do_advanced_search>
  <form name="clear_advanced_search_form" method="post" action="template.pl">
  <input name="rm" value="advanced_search" type="hidden">
  <input name="search_filter" value="" type="hidden">
  <input name="clear_search_form" value="1" type="hidden">
  </form>
</tmpl_if>

<tmpl_if row_count>
  <form name="find_template" method="post" action="template.pl">
  <input name="rm" value="view" type="hidden">
  <input name="template_id" type="hidden">
  <tmpl_var history_return_params>
  </form>
</tmpl_if>

<tmpl_include footer.tmpl>

