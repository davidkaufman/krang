  }
</tmpl_if>

<tmpl_if row_count>
  edit_story = function( id )
  {
    Krang.form_submit( 'find_story', { rm: 'checkout_and_edit', story_id: id } );
  }

  view_story = function( id )
  {
    Krang.form_submit( 'find_story', { rm: 'view', story_id: id } );
  }

  view_story_log = function( id )
  {
    Krang.form_submit( 'view_story_log', { story_id: id } );
  }

  delete_selected = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to delete!' );
    else if ( confirm( 'Are you SURE you want to delete the checked Stories?' ) )
      Krang.form_submit( 'krang_pager_form', { rm: 'delete_selected' }, { to_top: false } );
  }

  checkout_selected = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to check out!' );
    else
      Krang.form_submit( 'krang_pager_form', { rm: 'checkout_selected' } );
  }

  publish_selected = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to publish!' );
    else if ( confirm( 'Are you SURE you want to publish these items?' ) )
    {
      document.forms[ 'krang_pager_form' ].action = 'publisher.pl';
      Krang.form_submit( 'krang_pager_form', { rm: 'publish_story_list' } );
    }
  }
</tmpl_if>
</script>

