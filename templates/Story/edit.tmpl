<tmpl_include header.tmpl>

<script type="text/javascript">
Krang.onload( function() {
  Krang.Nav.edit_mode();
  Krang.Help.set( 'story_find' );
} );

save_and_stay = function()
{
  Krang.form_submit('edit', { rm: 'save_and_stay' }, { to_top: false });
}

<tmpl_if is_root>

  <tmpl_if story_id>  //:ever not the case?(db2)
    save_and_view_log = function()
    {
      Krang.form_submit( 'edit', { rm: 'save_and_view_log' } );
    }

    save_and_edit_schedule = function()
    {
      Krang.form_submit( 'edit', { rm: 'save_and_edit_schedule' } );
    }
  </tmpl_if>

  save_and_edit_contribs = function()
  {
    Krang.form_submit( 'edit', { rm: 'save_and_edit_contribs' } );
  }

  add_category = function()  //:only from within category_chooser = function(db2)
  {
    Krang.form_submit( 'edit', { rm: 'add_category' }, { to_top: false } );
  }

  set_primary_category = function()
  {
    Krang.form_submit( 'edit', { rm: 'set_primary_category' }, { to_top: false } );
  }

  remove_categories = function()
  {
    if ( confirm( 'Are you SURE you want to delete these Categories?' ) )
      Krang.form_submit( 'edit', { rm: 'delete_categories' }, { to_top: false } );
  }

  check_in = function()
  {
    Krang.form_submit( 'edit', { rm: 'check_in' } );
  }

  revert = function()
  {
    var f = document.forms[ 'edit' ];
    var v = f.version.options[ f.version.selectedIndex ].value;

    if ( confirm( 'Are you SURE you want to discard changes and revert to version ' + v + '?' ) )
      Krang.form_submit( 'edit', { rm: 'revert' } );
  }

  save_and_view = function()
  {
    Krang.form_submit( 'edit', { rm: 'save_and_view' } );
  }

  remove_story = function()
  {
    if ( confirm( 'Are you SURE you want to delete this Story?' ) )
      Krang.form_submit( 'edit', { rm: 'delete' } );
  }

  db_save = function()
  {
    Krang.form_submit( 'edit', { rm: 'db_save' } );
  }

  db_save_and_stay = function()
  {
    Krang.form_submit( 'edit', { rm: 'db_save_and_stay' }, { to_top: false } );
  }

  <tmpl_if may_publish>
    save_and_publish = function()
    {
      Krang.form_submit( 'edit', { rm: 'save_and_publish' } );
    }
  </tmpl_if>

<tmpl_else>

  <tmpl_if bulk_edit>

    save_and_leave_bulk_edit = function()
    {
      Krang.form_submit( 'edit', { rm: 'save_and_leave_bulk_edit' } );
    }

  <tmpl_else>

    <tmpl_if allow_delete>
      remove_element = function()
      {
        if ( confirm( 'Are you SURE you want to delete this Element?' ) )
          Krang.form_submit( 'edit', { rm: 'delete_element' } );
      }
    </tmpl_if>

    save_and_go_up = function()
    {
      Krang.form_submit( 'edit', { rm: 'save_and_go_up' } );
    }

  </tmpl_if>

</tmpl_if>
</script>

<tmpl_if is_root><tmpl_if story_id><p class="east">
  <a href="javascript:save_and_view_log()">View Log</a>
  <a href="javascript:save_and_edit_schedule()">View Schedule</a>
</p></tmpl_if></tmpl_if>

<h2>
Edit Story
</h2>

<form name="edit" method="post" enctype="multipart/form-data" action="story.pl">

<input name="rm" value="edit" type="hidden">

<h3>
Properties
</h3>

<table summary="">

<colgroup>
<col class="c-label">
<col>
</colgroup>

<tbody>
<tr>
<th>URL</th>
<td><tmpl_var url><!--:markup--></td>
</tr>

<tr>
<th>Type</th>
<td><tmpl_var escape=html type></td>
</tr>

<tr<tmpl_unless is_root> class="last"</tmpl_unless>>
<th>Story ID</th>
<td><tmpl_var escape=html story_id></td>
</tr>
</tbody>

<tmpl_if is_root>
  <tbody class="demi">
  <tr<tmpl_if bad_title> class="ERR-ROW"</tmpl_if>>
  <th>*Title</th>
  <td><input name="title" value="<tmpl_var escape=html title>"></td>
  </tr>

  <tr<tmpl_if bad_slug> class="ERR-ROW"</tmpl_if>>
  <th>Slug</th>
  <td><input name="slug" value="<tmpl_var escape=html slug>"></td>
  </tr>
  </tbody>

  <tbody>
  <tr<tmpl_if bad_cover_date> class="ERR-ROW"</tmpl_if>>
  <th>*Cover Date</th>
  <td><tmpl_var cover_date_selector></td>
  </tr>

  <tr<tmpl_if contribs_loop> class="meld"</tmpl_if>>
  <th>Contributors</th>
  <td class="glue">
  <tmpl_if contribs_loop>
    <tmpl_loop contribs_loop>
      <tmpl_var escape=html first_name> <tmpl_var escape=html last_name> (<tmpl_var escape=html type>)
      <tmpl_unless __last__><br></tmpl_unless>
    </tmpl_loop>
    </td>
    </tr>

    <tr>
    <th><!-- --></th>
    <td>
    <input value="Edit" onclick="save_and_edit_contribs()" type="button" class="button">
  <tmpl_else>
    <input value="Add" onclick="save_and_edit_contribs()" type="button" class="button">
  </tmpl_if>
  </td>
  </tr>

  <tr>
  <th>Priority</th>
  <td><tmpl_var priority_selector></td>
  </tr>

  <tr>
  <th>Current Version</th>
  <td><tmpl_var escape=html version></td>
  </tr>

  <tr>
  <th>Published Version</th>
  <td><tmpl_unless published_version>[n/a]<tmpl_else><tmpl_var escape=html published_version></tmpl_unless></td>
  </tr>

  <tr class="last">
  <th>All Versions</th>
  <td>
  <tmpl_var version_selector><!--:markup-->
  <input value="Revert" onclick="revert()" type="button" class="button">
  <input value="View" onclick="save_and_view()" type="button" class="button">
  </td>
  </tr>
  </tbody>

</tmpl_if>

</table>

<!--ElementEditor/edit.tmpl-->
<tmpl_include /ElementEditor/edit.tmpl>
<!--:ElementEditor/edit.tmpl-->

<tmpl_if is_root>

  <h3>
  Sites/Categories
  </h3>

  <table class="list select_row" summary=""><!--:FIX(db2)-->

  <colgroup>
  <col class="series">
  <col>
  <col>
  <col class="series">
  </colgroup>

  <thead>
  <tr>
  <th class="series">Primary</th>
  <th>Site</th>
  <th>Category</th>
  <th class="series"><tmpl_loop category_loop><tmpl_if __first__><tmpl_unless __last__><input onclick="Krang.check_all(this,'cat_remove_')" type="checkbox"></tmpl_unless></tmpl_if></tmpl_loop></th>  <!-- db2: ick, but that should work -->
  </tr>
  </thead>

  <tbody>

  <tmpl_unless category_loop><!--:even possible?(db2)-->

    <tr>
    <td colspan="4">
    No Categories Assigned.
    </td>
    </tr>

  <tmpl_else>

    <tmpl_loop category_loop>
      <tr>
      <td class="series"><input name="primary_category_id" value="<tmpl_var escape=html category_id>" type="radio"<tmpl_if __first__> checked</tmpl_if>></td>
      <td><tmpl_var escape=html site></td>
      <td><tmpl_var escape=html category></td>
      <td class="series">
      <tmpl_unless __first__>
        <input name="cat_remove_<tmpl_var escape=html category_id>" type="checkbox">
      </tmpl_unless>
      </td>
      </tr>
    </tmpl_loop>

  </tmpl_unless>

  <tr>
  <td class="series"><tmpl_loop category_loop><tmpl_if __first__><tmpl_unless __last__><input value="Set" onclick="set_primary_category()" type="button" class="button"></tmpl_unless></tmpl_if></tmpl_loop></td>  <!-- db2: ick, but that should work -->
  <td colspan="2"><tmpl_var category_chooser></td>
  <td class="series"><tmpl_loop category_loop><tmpl_if __first__><tmpl_unless __last__><input value="Delete" onclick="remove_categories()" type="button" class="button"></tmpl_unless></tmpl_if></tmpl_loop></td>  <!-- db2: ick, but that should work -->
  </tr>

  </tbody>

  </table>

</tmpl_if>

<div class="panel">
<input value="Save &amp; Stay" onclick="<tmpl_if is_root>db_save_and_stay<tmpl_else>save_and_stay</tmpl_if>()" type="button">
<input value="Save" onclick="<tmpl_if is_root>db_save<tmpl_else><tmpl_if bulk_edit>save_and_leave_bulk_edit<tmpl_else>save_and_go_up</tmpl_if></tmpl_if>()" type="button">
<tmpl_if is_root>
  <input value="Check In To" onclick="check_in()" type="button">
  <select name="checkin_to"><tmpl_loop desk_loop>
    <option value="<tmpl_var escape=html choice_desk_id>"><tmpl_var escape=html choice_desk_name> Desk</option>
  </tmpl_loop></select>
  <tmpl_if may_publish>
    <input value="Publish" onclick="save_and_publish()" type="button">
  </tmpl_if>
  <input value="Delete" onclick="remove_story()" type="button">
<tmpl_else><tmpl_unless bulk_edit><tmpl_if allow_delete>
  <input value="Delete" onclick="remove_element()" type="button">
</tmpl_if></tmpl_unless></tmpl_if>
</div>

</form>

<tmpl_include footer.tmpl>

