<script type="text/javascript">
Krang.onload( function() {
  Krang.Help.set( 'group' );
} );

add_group = function()
{
  Krang.form_submit('add_group_form');
}

<tmpl_if row_count>
  edit_group = function( id )
  {
    Krang.form_submit('edit_group_form', { group_id: id });
  }

  delete_selected = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to delete!' );
    else if ( confirm( 'Are you SURE you want to delete these Groups?' ) )
      Krang.form_submit('krang_pager_form', { rm: 'delete_selected' }, { to_top: false });
  }
</tmpl_if>
</script>

