#C th       { font-weight: bold; text-align: left; white-space: nowrap; }
#C thead th { vertical-align: bottom; }/*:temp(db2)*/
#C tbody th { background-color: inherit; color: #666; }

#C table table    { margin-top: 0; table-layout: auto; }/*:ONLY ElementEditor?(db2)*/
#C table table td { padding-left: 0; overflow: visible; word-wrap: normal; }/*:ONLY ElementEditor?(db2)*/

#C table.report { width: auto; table-layout: auto; }
