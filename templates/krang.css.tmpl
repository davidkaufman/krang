/*************************
 * HTML::PopupTreeSelect *
 *************************/

.hpts-outer
{
  z-index: 32767; visibility: hidden; position: absolute; background-color: <tmpl_var BackgroundColor>; top: 0; left: 0; border: 2px outset <tmpl_var TextColor>;
  filter:progid:DXImageTransform.Microsoft.dropshadow(color=#BABABA,offX=3,offY=3,positive=true);
}

.hpts-outer *   { width: 225px; }
.hpts-outer * * { width: auto; }

.hpts-title { overflow: hidden; background: <tmpl_var DarkColor>; color: <tmpl_var LightTextColor>; margin-bottom: 4px; padding: 2px 0; font-weight: bold; white-space: nowrap; }
