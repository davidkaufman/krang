.hpts-block { display: none; margin-left: 24px; }
.hpts-inner span a { text-decoration: none; }
.hpts-label-selected a { background: <tmpl_var LightColor>; color: <tmpl_var TextColor>; }
.hpts-label-unselected a { }
.hpts-bbar   { overflow: hidden; background: <tmpl_var BrightColor>; color: <tmpl_var TextColor>; margin-top: 10px; padding: 3px 0; text-align: right; white-space: nowrap; }
.hpts-botbar { }
.hpts-button { overflow: visible; width: auto !important; background: <tmpl_var BorderColor>; color: <tmpl_var ButtonColor>; margin: 0 8px 0 0; border: thin outset; padding: 1px; font-weight: bold; line-height: 1; }
.hpts-bbar .hpts-button { margin: 0 4px 0 0; }


/*******************************
 * Krang::Widget::date_chooser *
 *******************************/

img.calendar_trigger:hover { cursor: pointer; }
div.calendar               { position: relative; width: 204px; }
.calendar, .calendar table { background: #999; color: #FFF; cursor: default; }

/* navigation buttons */
.calendar .button { height: 15px; font-weight: bold; text-align: center; }
.calendar .nav    { background: #999 url("/images/cal_button_bg.gif") bottom right repeat-x; color: #690; padding: 0 2px; font-size: 15px; }/*:FIX(db2)*/

/* 'Month Year' labeling */
.calendar thead .title { background: #999; color: #FFF; font-size: 11px; font-weight: bold; text-align: center; }/*:FIX(db2)*/

/* TR containing navigation buttons */
.calendar thead .headrow { background: #778; color: #FFF; }

/* TR containing day names */
.calendar thead .daynames { background: #BDF; }

/* TDs containing the day names */
.calendar thead .name { background-color: #DDD; color: #369; font-family: font-size: 14px; Georgia, serif; text-align: center; }

/* button :hover state */
.calendar thead .hilite { color: #000; }

/* button :active state */
.calendar thead .active { color: #999; }

/* TDs containing particular days */
.calendar tbody .day { color: #690; width: 2em; padding: 2px 4px 2px 2px; text-align: center; }
.calendar tbody .day.othermonth { font-weight: normal; }
.calendar tbody td   { background-color: #FFF; font-weight: bold; }

/* TD :hover state */
.calendar tbody td.hilite { background-color: #DDD; color: #360; }

/* TD :active state */
.calendar tbody td.active { background: #999; }

/* selected day */
.calendar tbody td.selected { background-color: #FF9; color: #360; }

/* weekends */
.calendar tbody td.weekend, .calendar tbody td.oweekend { background-color: #CEE7FF; }

/* today, etc. */
.calendar tbody td.today   { color: #000; }
.calendar tbody .disabled  { color: #999; }
.calendar tbody .emptycell { visibility: hidden; }

/* some months need fewer than six rows */
.calendar tbody .emptyrow { display: none; }

/* TFOOT */
.calendar tfoot { display: none; }

/* Combo boxes (menus that display months/years for direct selection) */
.calendar .combo { display: none; background: #DDD; color: #000; position: absolute; z-index: 100; top: 0; left: 0; width: 4em; border: 1px solid #999; font-size: .9em; cursor: default; }
.calendar .combo .label, .calendar .combo .label-IEfix { padding: 1px; text-align: center; }
.calendar .combo .label-IEfix { width: 4em; }/*:egad(db2)*/
.calendar .combo .hilite { background: #CEE7FF; }
.calendar .combo .active { background: #CEE7FF; border-top: 1px solid #999; border-bottom: 1px solid #999; font-weight: bold; }


/*******************************
 * Krang::Widget::time_chooser *
 *******************************/

img.clock_trigger:hover { cursor: pointer; }
div.clock_widget        { background-color: #CEE7FF; position: absolute; width: auto; border: 1px solid #999; padding: 3px; white-space: nowrap; }


