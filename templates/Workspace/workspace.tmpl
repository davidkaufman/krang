<tmpl_include header.tmpl>

<script type="text/javascript">
Krang.onload( function() {
  Krang.Help.set( 'workspace' );
} );

<tmpl_if krang_pager_rows>
  log = function( id )
  {
    Krang.form_submit('krang_pager_form', { rm: 'goto_log', id: id });
  }

  edit = function( id )
  {
    Krang.form_submit('krang_pager_form', { rm: 'goto_edit', id: id });
  }

  link_toggle_checkbox = function( nameForm, nameCheckbox, id )
  {
    var CBOX = document.forms[ nameForm ][ nameCheckbox ];

    CBOX.checked = !CBOX.checked;

    update_testing( id );
  }

  update_testing = function( id )
  {
    Krang.form_submit( 'krang_pager_form', { rm: 'update_testing', id : id }, { to_top : false } );
  }

  checkin = function( id )
  {
    Krang.form_submit('krang_pager_form', { rm: 'checkin', id: id });
  }

  copy = function( id )
  {
    Krang.form_submit('krang_pager_form', { rm: 'copy', id: id });
  }

  deploy = function( id )
  {
    Krang.form_submit('krang_pager_form', { rm: 'deploy', id: id });
  }

//(db2)untied to UI; runmode exists:
//remove = function( id )
//{
//  if ( confirm( 'Are you SURE you want to delete this item?' ) )
//    Krang.form_submit('krang_pager_form', { rm: 'delete', id: id });
//}

  publish_media = function( id )
  {
    Krang.form_submit('publish_media_form', { media_id: id });
  }

  publish_story = function( id )
  {
    Krang.form_submit('publish_story_form', { story_id: id });
  }

  <tmpl_if may_publish>
    publish_checked = function()
    {
      if ( !Krang.pager_row_checked() )
        alert( 'Nothing selected to publish!' );
      else
      {
        // disallow publish for mailings:
        var rows = document.forms[ 'krang_pager_form' ].krang_pager_rows_checked;

        for ( var i = 0; i < rows.length; i++ )
        {
          if ( rows[ i ].checked && ( rows[ i ].value.substr( 0, 7 ) == 'message' ) )
          {
            alert( 'Messages cannot be published.\n\nPlease un-check any Messages and try again.' );
            return;
          }
        }
        // :disallow publish for mailings

        if ( confirm( 'Are you SURE you wish to publish all these items?' ) )
        {
          document.forms[ 'krang_pager_form' ].action = 'publisher.pl';
          Krang.form_submit( 'krang_pager_form', { rm : 'publish_story_list' } );
        }
      }
    }
  </tmpl_if>

  checkin_checked = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to check in!' );
    else
      Krang.form_submit( 'krang_pager_form', { rm : 'checkin_checked' }, { to_top : false } );
  }

  delete_checked = function()
  {
    if ( !Krang.pager_row_checked() )
      alert( 'Nothing selected to delete!' );
    else if ( confirm( 'Are you SURE you want to delete these items?' ) )
      Krang.form_submit( 'krang_pager_form', { rm : 'delete_checked' }, { to_top : false } );
  }
</tmpl_if>
</script>

<h2>
Workspace
</h2>

<tmpl_unless krang_pager_rows>

  <p class="naught">
  Your Workspace is currently empty.
  </p>

<tmpl_else>

  <h3>
  Checked Out Content
  </h3>

  <form name="krang_pager_form" method="post" action="workspace.pl">

  <input name="rm" type="hidden">
  <input name="id" type="hidden">
  <tmpl_include HTMLPager/pager-internals.tmpl>

  <div class="panel">
  <div class="west">
  Sorted by
  <tmpl_var sort_select>
  </div>

  <tmpl_if may_publish>
    <input value="Publish" onclick="publish_checked()" type="button">
  </tmpl_if>
  <input value="Check In" onclick="checkin_checked()" type="button">
  <input value="Delete" onclick="delete_checked()" type="button">
  </div>

  <tmpl_include HTMLPager/pager-pagination.tmpl>

  <table class="result select_row" summary="">

  <colgroup>
  <col class="c-id">
  <col class="c-type">
  <col>
  <col style="width:36em"><!--:unreliable hack(db2)-->
  <col class="tick">
  </colgroup>

  <thead>
  <tr>
  <th>ID</th>
  <th>Type</th>
  <th>Title</th>
  <th>URL</th>
  <th class="tick"><tmpl_var colhead_checkbox_column></th>
  </tr>
  </thead>

  <tbody><tmpl_loop krang_pager_rows>
    <tr>
    <td><tmpl_if is_story>
      <tmpl_var escape=html story_id>
    <tmpl_else><tmpl_if is_media>
      <tmpl_var escape=html media_id>
    <tmpl_else><tmpl_if is_template>
      <tmpl_var escape=html template_id>
    <tmpl_else><tmpl_if is_message>
      <tmpl_var escape=html message_id>
    </tmpl_if></tmpl_if></tmpl_if></tmpl_if></td>

    <td><tmpl_if is_story>
      Story
    <tmpl_else><tmpl_if is_media>
      Media
    <tmpl_else><tmpl_if is_template>
      Template
    <tmpl_else><tmpl_if is_message>
      Message
    </tmpl_if></tmpl_if></tmpl_if></tmpl_if></td>

    <td>
    <b><tmpl_var escape=html title></b>

    <tmpl_unless is_message>
      <tmpl_if is_story>
        <br>
        <tmpl_var escape=html story_type>
      </tmpl_if>
      <br>
      Version <tmpl_var escape=html version>
    </tmpl_unless>
    </td>

    <td>
    <tmpl_if thumbnail>
      <a title="Preview <tmpl_var escape=html title>" href="javascript:Krang.preview('media','<tmpl_var escape=html media_id>')" class="east" style="margin-left:4px"><img alt="" src="<tmpl_var escape=html thumbnail>"></a>
    </tmpl_if>

    <b>
    <tmpl_unless is_message>
      <tmpl_var url><!--:markup-->
    <tmpl_else>
      Segment:
      <tmpl_var escape=html segment>
      |
      Campaign:
      <tmpl_var escape=html campaign>
    </tmpl_unless>
    </b>

    <br>

    <tmpl_unless may_edit>

      <tmpl_unless is_message>
        <input value="View Log" onclick="log('<tmpl_var escape=html id>')" type="button" class="button">
      </tmpl_unless>

    <tmpl_else>

      <tmpl_var command_column><!--:broken for Messages(db2)-->

      <tmpl_if is_story>

        <tmpl_if may_publish>
          <input value="Publish" onclick="publish_story('<tmpl_var escape=html id>')" type="button" class="button">
        </tmpl_if>

        <input value="Copy" onclick="copy('<tmpl_var escape=html id>')" type="button" class="button">

        <tmpl_if desk_loop><span class="glue">
          <input value="Check In To" onclick="checkin('<tmpl_var escape=html id>')" type="button" class="button">
          <select name="checkin_to_<tmpl_var escape=html id>" style="width:10em"><tmpl_loop desk_loop>
            <option value="<tmpl_var escape=html choice_desk_id>"<tmpl_if is_selected> selected</tmpl_if>><tmpl_var escape=html choice_desk_name> Desk</option>
          </tmpl_loop></select>
        </span></tmpl_if>

      <tmpl_else><tmpl_if is_media>

        <tmpl_if may_publish>
          <input value="Publish" onclick="publish_media('<tmpl_var escape=html id>')" type="button" class="button">
        </tmpl_if>

      <tmpl_else><tmpl_if is_template>

        <input value="Deploy" onclick="deploy('<tmpl_var escape=html id>')" type="button" class="button">

      </tmpl_if></tmpl_if></tmpl_if>

    </tmpl_unless>

    <tmpl_if is_template>
      <span class="glue">
      <input name="testing_<tmpl_var escape=html id>" value="1" type="checkbox" onclick="update_testing('<tmpl_var escape=html id>')"<tmpl_if testing> checked</tmpl_if>>
      <a href="javascript:link_toggle_checkbox('krang_pager_form','testing_<tmpl_var escape=html id>','<tmpl_var escape=html id>')">Test</a>
      </span>
    </tmpl_if>
    </td>

    <td class="tick"><tmpl_if may_edit>
      <tmpl_var checkbox_column>
    </tmpl_if></td>
    </tr>
  </tmpl_loop></tbody>

  <tmpl_include HTMLPager/pager-pagination.tmpl>

  <div class="panel capped">
  <div class="west">
  Sorted by
  <tmpl_var sort_select>
  </div>

  <tmpl_if may_publish>
    <input value="Publish" onclick="publish_checked()" type="button">
  </tmpl_if>
  <input value="Check In" onclick="checkin_checked()" type="button">
  <input value="Delete" onclick="delete_checked()" type="button">
  </div>

  </form>

  <form name="publish_story_form" action="publisher.pl">
  <input name="rm" value="publish_story" type="hidden">
  <input name="story_id" value="" type="hidden">
  </form>

  <form name="publish_media_form" action="publisher.pl">
  <input name="rm" value="publish_media" type="hidden">
  <input name="media_id" value="" type="hidden">
  </form>

</tmpl_unless>

<tmpl_include footer.tmpl>

